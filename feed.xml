---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url | default: '' }}{{ site.baseurl }}</link>
    <description>News and project updates from Merced Botanical Gardens.</description>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <language>en-us</language>
    {% for post in site.posts %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ site.url | default: '' }}{{ post.url | relative_url }}</link>
      <guid isPermaLink="true">{{ site.url | default: '' }}{{ post.url | relative_url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <description><![CDATA[{{ post.excerpt | strip_html | strip_newlines }}]]></description>
      {% if post.tags %}
        {% for tag in post.tags %}
      <category>{{ tag | xml_escape }}</category>
        {% endfor %}
      {% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>
